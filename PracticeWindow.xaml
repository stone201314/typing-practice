<Window x:Class="TypingPractice.PracticeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="打字练习" Height="450" Width="550"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5"
        KeyDown="Window_KeyDown"
        Focusable="True">
    
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 顶部 -->
        <TextBlock x:Name="ProgressText" Grid.Row="0" Text="进度：1/10" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <!-- 中间 -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="请输入这个字/词：" FontSize="16" Foreground="Gray" 
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
            
            <TextBlock x:Name="WordText" Text="一" FontSize="56" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,15"
                       Foreground="#333"/>
            
            <TextBlock x:Name="MeaningText" Text="含义：数字1  拼音：yī" 
                       FontSize="16" HorizontalAlignment="Center" 
                       Foreground="#666" Margin="0,0,0,30"/>
            
            <!-- 输入框 -->
            <Border Background="White" CornerRadius="10" Padding="15" 
                    MinWidth="250" BorderBrush="#ddd" BorderThickness="2">
                <TextBox x:Name="InputBox" Text="" FontSize="28" 
                         HorizontalAlignment="Center" BorderThickness="0"
                         IsReadOnly="True" CaretBrush="Transparent"
                         Foreground="#333" Background="Transparent"
                         TextAlignment="Center" MinWidth="200"/>
            </Border>
            
            <TextBlock x:Name="HintText" Text="请输入对应的字母，按 Enter 确认" 
                       FontSize="13" HorizontalAlignment="Center" 
                       Foreground="#999" Margin="0,15,0,0"/>
            
            <TextBlock x:Name="ResultText" Text="" FontSize="18" 
                       HorizontalAlignment="Center" FontWeight="Bold"
                       Margin="0,20,0,0"/>
        </StackPanel>
        
        <!-- 底部 -->
        <Button Grid.Row="2" Content="返回" Width="100" Height="35" 
                FontSize="14" HorizontalAlignment="Left" Click="OnClose"/>
    </Grid>
</Window>
