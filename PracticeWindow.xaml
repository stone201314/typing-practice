<Window x:Class="TypingPractice.PracticeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="打字练习" Height="650" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#f5f5f5">
    
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 顶部进度 -->
        <TextBlock x:Name="ProgressText" Grid.Row="0" Text="进度：1/10" 
                   FontSize="22" FontWeight="Bold" Margin="0,0,0,25"/>
        
        <!-- 提示文字 -->
        <TextBlock x:Name="PromptText" Grid.Row="1" Text="请输入对应的拼音：" 
                   FontSize="20" Foreground="Gray" 
                   HorizontalAlignment="Center" Margin="0,0,0,15"/>
        
        <!-- 中间内容 -->
        <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- 汉字/单词显示 -->
            <TextBlock x:Name="WordText" Text="你好" FontSize="56" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,15"
                       Foreground="#333" TextWrapping="Wrap" MaxWidth="550"
                       TextAlignment="Center"/>
            
            <!-- 含义 -->
            <TextBlock x:Name="MeaningText" Text="问候语" 
                       FontSize="18" HorizontalAlignment="Center" 
                       Foreground="#666" Margin="0,0,0,35"
                       TextWrapping="Wrap" MaxWidth="550" TextAlignment="Center"/>
            
            <!-- 输入框 -->
            <TextBox x:Name="InputBox" Text="" FontSize="28" 
                     Width="420" Height="60" Padding="10"
                     HorizontalAlignment="Center" 
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     BorderBrush="#4CAF50" BorderThickness="3"
                     FontFamily="Consolas"
                     KeyDown="InputBox_KeyDown"
                     MaxLength="60"/>
            
            <!-- 提示 -->
            <TextBlock x:Name="HintText" Text="输入后按 Enter 确认" 
                       FontSize="16" HorizontalAlignment="Center" 
                       Foreground="#999" Margin="0,18,0,0"/>
        </StackPanel>
        
        <!-- 结果显示 -->
        <TextBlock x:Name="ResultText" Grid.Row="3" Text="" FontSize="20" 
                   HorizontalAlignment="Center" FontWeight="Bold"
                   Margin="0,18,0,0" TextWrapping="Wrap"
                   MaxWidth="550" Height="45" TextAlignment="Center"/>
        
        <!-- 底部按钮 -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" 
                    HorizontalAlignment="Center" Margin="0,18,0,0">
            <Button x:Name="ContinueBtn" Content="继续练习" Width="120" Height="45" 
                    FontSize="16" Margin="10,0" Click="OnContinue"
                    Background="#4CAF50" Foreground="White" Visibility="Collapsed"/>
            <Button x:Name="BackBtn" Content="返回主界面" Width="130" Height="45" 
                    FontSize="16" Margin="10,0" Click="OnBackToMain"
                    Background="#2196F3" Foreground="White" Visibility="Collapsed"/>
            <Button x:Name="CloseBtn" Content="返回" Width="100" Height="40" 
                    FontSize="15" HorizontalAlignment="Left" 
                    Click="OnClose" Visibility="Visible"/>
        </StackPanel>
    </Grid>
</Window>
