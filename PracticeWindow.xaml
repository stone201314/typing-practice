<Window x:Class="TypingPractice.PracticeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="打字练习" Height="500" Width="700"
        WindowStartupLocation="CenterOwner"
        Background="#f5f5f5">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 顶部信息栏 -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="{Binding ProgressText}" FontSize="16" VerticalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="{Binding SpeedText}" FontSize="14" Margin="0,0,20,0"/>
                <TextBlock Text="{Binding AccuracyText}" FontSize="14"/>
            </StackPanel>
        </Grid>
        
        <!-- 练习区域 -->
        <Grid Grid.Row="1" VerticalAlignment="Center">
            <!-- 目标词显示 -->
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="请输入：" FontSize="18" Foreground="#666" Margin="0,0,0,10"/>
                <TextBlock Text="{Binding TargetWord}" FontSize="48" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>
                
                <!-- 用户输入区 -->
                <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,30">
                    <TextBlock Text="{Binding CurrentInput}" FontSize="36" 
                               Foreground="#333" MinWidth="300" TextAlignment="Center"/>
                </Border>
                
                <!-- 提示 -->
                <TextBlock Text="按键盘输入字母" FontSize="14" Foreground="#999"/>
            </StackPanel>
            
            <!-- 释义弹窗 -->
            <Border Background="White" CornerRadius="10" Padding="30" 
                    Visibility="{Binding IsDefinitionVisible, Converter={StaticResource BoolToVisibilityConverter}}"
                    VerticalAlignment="Center" HorizontalAlignment="Center"
                    BorderBrush="#ddd" BorderThickness="1">
                <StackPanel Width="400">
                    <TextBlock Text="{Binding DefinitionText}" FontSize="20" 
                               TextWrapping="Wrap" Margin="0,0,0,15"/>
                    <TextBlock Text="{Binding ExampleText}" FontSize="16" 
                               Foreground="#666" TextWrapping="Wrap" Margin="0,0,0,20"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="加入生词本" Style="{StaticResource SecondaryButton}"
                                Click="OnAddToVocabularyBook" Margin="0,0,20,0"/>
                        <Button Content="下一个 →" Style="{StaticResource PrimaryButton}"
                                Click="OnNextWord"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- 底部按钮 -->
        <Button Grid.Row="2" Content="返回" Style="{StaticResource SecondaryButton}"
                HorizontalAlignment="Left" Click="OnClose"/>
    </Grid>
</Window>
