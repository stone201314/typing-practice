<Window x:Class="TypingPractice.PracticeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="打字练习" Height="450" Width="550"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">
    
    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 顶部 -->
        <TextBlock x:Name="ProgressText" Grid.Row="0" Text="进度：1/10" 
                   FontSize="18" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <!-- 中间 -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="请输入这个字对应的拼音：" FontSize="16" Foreground="Gray" 
                       HorizontalAlignment="Center" Margin="0,0,0,10"/>
            
            <TextBlock x:Name="WordText" Text="一" FontSize="64" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,15"
                       Foreground="#333"/>
            
            <TextBlock x:Name="MeaningText" Text="含义：数字1" 
                       FontSize="16" HorizontalAlignment="Center" 
                       Foreground="#666" Margin="0,0,0,30"/>
            
            <!-- 输入框 - 可以正常输入 -->
            <TextBox x:Name="InputBox" Text="" FontSize="32" 
                     Width="250" Height="50" Padding="10"
                     HorizontalAlignment="Center" 
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     BorderBrush="#4CAF50" BorderThickness="2"
                     KeyDown="InputBox_KeyDown"/>
            
            <TextBlock x:Name="HintText" Text="输入拼音后按 Enter 确认" 
                       FontSize="13" HorizontalAlignment="Center" 
                       Foreground="#999" Margin="0,15,0,0"/>
            
            <TextBlock x:Name="ResultText" Text="" FontSize="18" 
                       HorizontalAlignment="Center" FontWeight="Bold"
                       Margin="0,20,0,0"/>
        </StackPanel>
        
        <!-- 底部 -->
        <Button Grid.Row="2" Content="返回" Width="100" Height="35" 
                FontSize="14" HorizontalAlignment="Left" Click="OnClose"/>
    </Grid>
</Window>
