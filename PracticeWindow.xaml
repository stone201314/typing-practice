<Window x:Class="TypingPractice.PracticeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="打字练习" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5"
        KeyDown="Window_KeyDown">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 顶部 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="进度：" FontSize="16"/>
            <TextBlock x:Name="ProgressText" Text="0/10" FontSize="16" FontWeight="Bold"/>
        </StackPanel>
        
        <!-- 中间 -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="请输入：" FontSize="16" Foreground="Gray" Margin="0,0,0,10"/>
            <TextBlock x:Name="WordText" Text="一" FontSize="48" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <TextBlock x:Name="MeaningText" Text="数字1" FontSize="18" 
                       HorizontalAlignment="Center" Foreground="Gray" Margin="0,0,0,30"/>
            <Border Background="White" CornerRadius="8" Padding="15" MinWidth="200">
                <TextBlock x:Name="InputText" Text="" FontSize="24" 
                           HorizontalAlignment="Center" Foreground="#333"/>
            </Border>
            <TextBlock Text="按键盘输入字母，Enter 确认" FontSize="12" 
                       HorizontalAlignment="Center" Foreground="Gray" Margin="0,20,0,0"/>
            <TextBlock x:Name="ResultText" Text="" FontSize="20" 
                       HorizontalAlignment="Center" Foreground="Green" Margin="0,20,0,0"/>
        </StackPanel>
        
        <!-- 底部 -->
        <Button Grid.Row="2" Content="返回" Width="100" Height="35" 
                HorizontalAlignment="Left" Click="OnClose"/>
    </Grid>
</Window>
