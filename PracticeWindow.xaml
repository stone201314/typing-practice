<Window x:Class="TypingPractice.PracticeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="打字练习" Height="550" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">
    
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 顶部进度 -->
        <TextBlock x:Name="ProgressText" Grid.Row="0" Text="进度：1/10" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,25"/>
        
        <!-- 提示文字 -->
        <TextBlock Grid.Row="1" Text="请输入这个字对应的拼音：" 
                   FontSize="18" Foreground="Gray" 
                   HorizontalAlignment="Center" Margin="0,10,0,15"/>
        
        <!-- 中间内容 -->
        <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- 汉字显示 -->
            <TextBlock x:Name="WordText" Text="一" FontSize="72" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,15"
                       Foreground="#333"/>
            
            <!-- 含义 -->
            <TextBlock x:Name="MeaningText" Text="含义：数字1" 
                       FontSize="18" HorizontalAlignment="Center" 
                       Foreground="#666" Margin="0,0,0,40"/>
            
            <!-- 输入框 -->
            <TextBox x:Name="InputBox" Text="" FontSize="36" 
                     Width="300" Height="60" Padding="10"
                     HorizontalAlignment="Center" 
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     BorderBrush="#4CAF50" BorderThickness="3"
                     FontFamily="Consolas"
                     KeyDown="InputBox_KeyDown"/>
            
            <!-- 提示 -->
            <TextBlock x:Name="HintText" Text="输入拼音后按 Enter 确认" 
                       FontSize="14" HorizontalAlignment="Center" 
                       Foreground="#999" Margin="0,20,0,0"/>
            
            <!-- 结果 -->
            <TextBlock x:Name="ResultText" Text="" FontSize="20" 
                       HorizontalAlignment="Center" FontWeight="Bold"
                       Margin="0,25,0,0" TextWrapping="Wrap"
                       MaxWidth="400"/>
        </StackPanel>
        
        <!-- 底部按钮 -->
        <Button Grid.Row="3" Content="返回主界面" Width="120" Height="40" 
                FontSize="15" HorizontalAlignment="Left" 
                Click="OnClose" Margin="0,30,0,0"/>
    </Grid>
</Window>
