<Window x:Class="TypingPractice.PracticeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="打字练习" Height="650" Width="650"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">
    
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 顶部进度 -->
        <TextBlock x:Name="ProgressText" Grid.Row="0" Text="进度：1/10" 
                   FontSize="22" FontWeight="Bold" Margin="0,0,0,30"/>
        
        <!-- 提示文字 -->
        <TextBlock x:Name="PromptText" Grid.Row="1" Text="请输入对应的拼音：" 
                   FontSize="20" Foreground="Gray" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>
        
        <!-- 中间内容 -->
        <StackPanel Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center">
            <!-- 汉字/单词显示 -->
            <TextBlock x:Name="WordText" Text="一" FontSize="80" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,20"
                       Foreground="#333"/>
            
            <!-- 含义 -->
            <TextBlock x:Name="MeaningText" Text="含义：数字1" 
                       FontSize="20" HorizontalAlignment="Center" 
                       Foreground="#666" Margin="0,0,0,50"/>
            
            <!-- 输入框 -->
            <TextBox x:Name="InputBox" Text="" FontSize="32" 
                     Width="350" Height="70" Padding="15"
                     HorizontalAlignment="Center" 
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     BorderBrush="#4CAF50" BorderThickness="3"
                     FontFamily="Consolas"
                     KeyDown="InputBox_KeyDown"
                     MaxLength="20"/>
            
            <!-- 提示 -->
            <TextBlock x:Name="HintText" Text="输入后按 Enter 确认" 
                       FontSize="16" HorizontalAlignment="Center" 
                       Foreground="#999" Margin="0,25,0,0"/>
        </StackPanel>
        
        <!-- 结果显示 -->
        <TextBlock x:Name="ResultText" Grid.Row="3" Text="" FontSize="22" 
                   HorizontalAlignment="Center" FontWeight="Bold"
                   Margin="0,30,0,0" TextWrapping="Wrap"
                   MaxWidth="500" Height="40"/>
        
        <!-- 底部按钮 -->
        <Button Grid.Row="4" Content="返回主界面" Width="140" Height="45" 
                FontSize="16" HorizontalAlignment="Left" 
                Click="OnClose" Margin="0,30,0,0"/>
    </Grid>
</Window>
