<Window x:Class="TypingPractice.SelectTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="选择练习类型" Height="600" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#f5f5f5">
    
    <Grid Margin="40">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <TextBlock x:Name="TitleText" Grid.Row="0" Text="中文练习" 
                   FontSize="28" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,25"/>
        
        <!-- 选项 -->
        <StackPanel Grid.Row="1">
            <!-- 练习类型 -->
            <TextBlock Text="练习类型：" FontSize="18" Margin="0,0,0,10"/>
            
            <Button x:Name="Type1Btn" Content="词组练习" Click="OnType1"
                    FontSize="20" Height="50" Margin="0,0,0,10"
                    Background="#4CAF50" Foreground="White"/>
            
            <Button x:Name="Type2Btn" Content="古诗词练习" Click="OnType2"
                    FontSize="20" Height="50" Margin="0,0,0,20"
                    Background="#9C27B0" Foreground="White"/>
            
            <!-- 难度选择 -->
            <TextBlock Text="难度：" FontSize="18" Margin="0,0,0,10"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                <Button Content="简单" Click="OnEasy" Width="90" Height="38" Margin="5,0"
                        x:Name="EasyBtn" Background="#ddd"/>
                <Button Content="中等" Click="OnMedium" Width="90" Height="38" Margin="5,0"
                        x:Name="MediumBtn" Background="#4CAF50" Foreground="White"/>
                <Button Content="困难" Click="OnHard" Width="90" Height="38" Margin="5,0"
                        x:Name="HardBtn" Background="#ddd"/>
            </StackPanel>
            
            <!-- 数量选择 -->
            <TextBlock Text="数量：" FontSize="18" Margin="0,0,0,10"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,15">
                <Button Content="5个" Click="OnCount5" Width="60" Height="38" Margin="5,0"
                        x:Name="Count5Btn" Background="#ddd"/>
                <Button Content="10个" Click="OnCount10" Width="60" Height="38" Margin="5,0"
                        x:Name="Count10Btn" Background="#4CAF50" Foreground="White"/>
                <Button Content="20个" Click="OnCount20" Width="60" Height="38" Margin="5,0"
                        x:Name="Count20Btn" Background="#ddd"/>
                <Button Content="50个" Click="OnCount50" Width="60" Height="38" Margin="5,0"
                        x:Name="Count50Btn" Background="#ddd"/>
            </StackPanel>
            
            <!-- 说明 -->
            <Border x:Name="DescBorder" Background="#fff" CornerRadius="8" Padding="12" Margin="0,5,0,0">
                <StackPanel>
                    <TextBlock Text="难度说明：" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBlock x:Name="DescText" FontSize="12"/>
                </StackPanel>
            </Border>
        </StackPanel>
        
        <!-- 底部按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button Content="开始练习" Width="120" Height="45" 
                    FontSize="18" Margin="10,0"
                    Background="#4CAF50" Foreground="White"
                    Click="OnStart"/>
            <Button Content="返回" Width="100" Height="45" 
                    FontSize="16" Margin="10,0"
                    Click="OnBack"/>
        </StackPanel>
    </Grid>
</Window>
