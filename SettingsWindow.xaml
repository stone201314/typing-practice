<Window x:Class="TypingPractice.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置" Height="350" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#f5f5f5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="设置" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <!-- 设置项 -->
        <StackPanel Grid.Row="1">
            <!-- 音效 -->
            <CheckBox Content="启用音效" IsChecked="{Binding SoundEnabled}" 
                      FontSize="16" Margin="0,0,0,15"/>
            
            <!-- 键位提示 -->
            <CheckBox Content="显示键位提示" IsChecked="{Binding KeyboardHintEnabled}" 
                      FontSize="16" Margin="0,0,0,15"/>
            
            <!-- 深色模式 -->
            <CheckBox Content="深色模式" IsChecked="{Binding DarkMode}" 
                      FontSize="16" Margin="0,0,0,15"/>
            
            <!-- 每日目标 -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="每日目标（词数）：" FontSize="16" VerticalAlignment="Center"/>
                <TextBox x:Name="DailyGoalTextBox" Text="{Binding DailyGoal}" 
                         Width="80" Height="30" FontSize="16" TextAlignment="Center"/>
            </StackPanel>
        </StackPanel>
        
        <!-- 底部按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal">
            <Button Content="保存" Style="{StaticResource PrimaryButton}"
                    Click="OnSave" Margin="0,0,20,0"/>
            <Button Content="取消" Style="{StaticResource SecondaryButton}"
                    Click="OnCancel"/>
        </StackPanel>
    </Grid>
</Window>
