<Window x:Class="TypingPractice.ReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="学习报告" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#f5f5f5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <TextBlock Grid.Row="0" Text="学习报告" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <!-- 统计卡片 -->
        <StackPanel Grid.Row="1" Spacing="15">
            <!-- 今日 -->
            <Border Background="White" CornerRadius="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="今日" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="练习词数" FontSize="12" Foreground="#999"/>
                            <TextBlock x:Name="TodayWordsText" Text="0" FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="练习时长" FontSize="12" Foreground="#999"/>
                            <TextBlock x:Name="TodayDurationText" Text="0秒" FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="正确率" FontSize="12" Foreground="#999"/>
                            <TextBlock x:Name="TodayAccuracyText" Text="0%" FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- 本周 -->
            <Border Background="White" CornerRadius="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="本周" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="练习词数" FontSize="12" Foreground="#999"/>
                            <TextBlock x:Name="WeekWordsText" Text="0" FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="练习时长" FontSize="12" Foreground="#999"/>
                            <TextBlock x:Name="WeekDurationText" Text="0秒" FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="正确率" FontSize="12" Foreground="#999"/>
                            <TextBlock x:Name="WeekAccuracyText" Text="0%" FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- 本月 -->
            <Border Background="White" CornerRadius="10" Padding="20">
                <StackPanel>
                    <TextBlock Text="本月" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="练习词数" FontSize="12" Foreground="#999"/>
                            <TextBlock x:Name="MonthWordsText" Text="0" FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1">
                            <TextBlock Text="练习时长" FontSize="12" Foreground="#999"/>
                            <TextBlock x:Name="MonthDurationText" Text="0秒" FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2">
                            <TextBlock Text="正确率" FontSize="12" Foreground="#999"/>
                            <TextBlock x:Name="MonthAccuracyText" Text="0%" FontSize="24" FontWeight="Bold"/>
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
        </StackPanel>
        
        <!-- 底部按钮 -->
        <Button Grid.Row="2" Content="返回" Style="{StaticResource SecondaryButton}"
                HorizontalAlignment="Left" Click="OnClose" Margin="0,20,0,0"/>
    </Grid>
</Window>
