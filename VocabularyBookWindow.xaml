<Window x:Class="TypingPractice.VocabularyBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="生词本" Height="500" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#f5f5f5">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="生词本" FontSize="24" FontWeight="Bold"/>
            <TextBlock x:Name="CountText" FontSize="16" Foreground="#666" 
                       VerticalAlignment="Center" Margin="20,0,0,0"/>
        </StackPanel>
        
        <!-- 生词列表 -->
        <ListBox Grid.Row="1" x:Name="VocabularyList" Background="White">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0">
                            <TextBlock Text="{Binding Word}" FontSize="18" FontWeight="Bold"/>
                            <TextBlock Text="{Binding Mode}" FontSize="12" Foreground="#999" Margin="0,5,0,0"/>
                            <TextBlock Text="{Binding AddedAt, StringFormat='添加时间：{0:yyyy-MM-dd}'}" 
                                       FontSize="12" Foreground="#999"/>
                        </StackPanel>
                        
                        <Button Grid.Column="1" Content="删除" Style="{StaticResource SecondaryButton}"
                                Click="OnDelete" Margin="10,0,0,0"/>
                    </Grid>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        
        <!-- 底部按钮 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,20,0,0">
            <Button Content="从生词本练习" Style="{StaticResource PrimaryButton}"
                    Click="OnPractice" Margin="0,0,20,0"/>
            <Button Content="返回" Style="{StaticResource SecondaryButton}" Click="OnClose"/>
        </StackPanel>
    </Grid>
</Window>
