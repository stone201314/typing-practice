<Window x:Class="TypingPractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="青少年打字练习" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        Background="#f0f0f0">
    
    <Grid Margin="30">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="青少年打字练习" FontSize="32" FontWeight="Bold" 
                       HorizontalAlignment="Center" Margin="0,0,0,40"/>
            
            <TextBlock Text="版本 1.1.2" FontSize="14" Foreground="Gray"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <TextBlock Text="程序已启动成功！" FontSize="18"
                       HorizontalAlignment="Center" Margin="0,0,0,20"/>
            
            <Button Content="开始练习" Width="150" Height="40" FontSize="16"
                    HorizontalAlignment="Center" Click="OnStartPractice"/>
        </StackPanel>
    </Grid>
</Window>
