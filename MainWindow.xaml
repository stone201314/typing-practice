<Window x:Class="TypingPractice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="青少年打字练习" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#f5f5f5">
    
    <Grid Margin="20">
        <!-- 登录界面 -->
        <Grid Visibility="{Binding IsLoginVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                <TextBlock Text="青少年打字练习" Style="{StaticResource TitleText}" 
                           HorizontalAlignment="Center" Margin="0,0,0,30"/>
                
                <!-- 已有用户 -->
                <TextBlock Text="选择用户：" Style="{StaticResource SubtitleText}" Margin="0,0,0,10"/>
                <ListBox x:Name="UsersList" ItemsSource="{Binding Users}" 
                         Height="150" Width="300" Margin="0,0,0,20"
                         SelectionChanged="OnUserSelected">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Nickname}" FontSize="16"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <!-- 创建新用户 -->
                <TextBlock Text="或创建新用户：" Style="{StaticResource SubtitleText}" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="NewUserNickname" Width="200" Height="35" 
                             FontSize="16" Padding="5" VerticalContentAlignment="Center"/>
                    <Button Content="创建" Style="{StaticResource PrimaryButton}" 
                            Margin="10,0,0,0" Click="OnCreateUser"/>
                </StackPanel>
            </StackPanel>
        </Grid>
        
        <!-- 主界面 -->
        <Grid Visibility="{Binding IsMainVisible, Converter={StaticResource BoolToVisibilityConverter}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- 顶部栏 -->
            <Grid Grid.Row="0" Margin="0,0,0,20">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="青少年打字练习" FontSize="24" FontWeight="Bold" VerticalAlignment="Center"/>
                </StackPanel>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <RadioButton Content="拼音" GroupName="Mode" IsChecked="True" 
                                 FontSize="16" Margin="0,0,20,0" Click="OnSwitchMode"/>
                    <RadioButton Content="英语" GroupName="Mode" 
                                 FontSize="16" Margin="0,0,20,0" Click="OnSwitchMode"/>
                    <TextBlock Text="{Binding CurrentUser.Nickname}" FontSize="16" VerticalAlignment="Center" Margin="0,0,20,0"/>
                    <Button Content="退出" Style="{StaticResource SecondaryButton}" Click="OnLogout"/>
                </StackPanel>
            </Grid>
            
            <!-- 主内容 -->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <!-- 今日进度 -->
                <Border Grid.Row="0" Background="White" CornerRadius="10" Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="{Binding TodayGoal, StringFormat='今日目标：练习{0}个词'}" 
                                   FontSize="18" Margin="0,0,0,10"/>
                        <ProgressBar Value="{Binding TodayProgress}" Maximum="{Binding TodayGoal}" 
                                     Height="20" Foreground="#4CAF50"/>
                        <TextBlock Text="{Binding TodayProgress, StringFormat='进度：{0}'}" 
                                   FontSize="14" Foreground="#666" Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>
                
                <!-- 功能按钮 -->
                <StackPanel Grid.Row="1" VerticalAlignment="Center">
                    <Button Content="继续练习" Style="{StaticResource PrimaryButton}" 
                            Width="200" Height="50" Click="OnStartPractice" Margin="0,0,0,20"/>
                    <Button Content="生词本" Style="{StaticResource SecondaryButton}" 
                            Width="200" Height="50" Click="OnOpenVocabularyBook" Margin="0,0,0,20"/>
                    <Button Content="学习报告" Style="{StaticResource SecondaryButton}" 
                            Width="200" Height="50" Click="OnOpenReport" Margin="0,0,0,20"/>
                    <Button Content="设置" Style="{StaticResource SecondaryButton}" 
                            Width="200" Height="50" Click="OnOpenSettings"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
